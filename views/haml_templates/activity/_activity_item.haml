
- title = 'Tim Ring uploaded a boo'
- date = '18th August'
- if(defined?(_))
  - title = _[:title] || title
  - date = _[:date] || date

.activity-item.triangle-isosceles

  - activity_content = capture_haml do 
    - if( !defined?(_) || _.indexed_subrenderers.count==0 )
      .placeholder
        %p
          placeholder content
    - else
      - _.indexed_subrenderers.each_with_index do |subrenderer, i|
        = _.insert(i)
        
  .activity-item-header
    %h4
      = title
    %p
      = date
  .activity-content-wrapper
    = activity_content
.clearfix

-#
:cssdeps
  base
:sassdeps  
  module_includes
  
-#
:css
  .activity-item {
    position: relative;
    overflow: visible;
  }
  .activity-item .activity-content-wrapper {
    padding: 0 100px;
  }
  .activity-item h4 {
    margin: 0;
    position: relative;
  }
  .activity-item .activity-item-header p {
    margin: 0;  
  }  
  .activity-item h4::before {
    position: absolute;
    right: 100%;
    content: "";
    width: 32px;
    height: 32px;
    margin-right: 2em;
    background-image: url(/images/a_user_pic.jpg);
    background-size: 32px 32px;    
  }
  
  
  /* creates triangle */
  .triangle-isosceles:after {
    content: "";
    position: absolute;
    top: 20px;
    right: 100%;
    border-style:solid;
      /* reduce the damage in FF3.0 */
      display:block; 
      width:0;
    border-width: 10px 10px 10px 0;
    border-color: transparent #fff;      
  }  