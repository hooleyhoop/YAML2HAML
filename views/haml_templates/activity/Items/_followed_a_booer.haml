.followed-a-booer
  .media-container
    %a
      %img( src="#{ imageHelper( img_file ) }" )

  .meta-data-container
    %p
      %a= real_name
    %p
      %a= user_name
    %a.follow-button( href="#" ) follow
    %p 
      %a= description
    %p 
      %a 3 boos
      %a 12 likes
      %a 169 followers
  
.clearfix

:css
  * { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }


  .followed-a-booer .media-container img {
    width: 100%;
    display: block;
  }
  .followed-a-booer .meta-data-container {
    overflow: auto;
  }
  .followed-a-booer p {
    margin: 0;
  }
  @media all and (max-width: 480px){
    .followed-a-booer .media-container {
      width: 100%;
      padding-bottom: 1em;            
    }
    .followed-a-booer .meta-data-container {
      width: 100%;
    }
  }

  @media all and (min-width: 481px){
    .followed-a-booer .media-container {
      float: left;
      width: 33%;
      padding-right: 1em;      
    }
    .followed-a-booer .meta-data-container {
      float: left;
      width: 66%;
    }    
  }
  
  /* This imageless css button was generated by CSSButtonGenerator.com */  
  .follow-button {
    -moz-box-shadow:inset 0px 1px 0px 0px #ffffff;
    -webkit-box-shadow:inset 0px 1px 0px 0px #ffffff;
    box-shadow:inset 0px 1px 0px 0px #ffffff;
    background-color:#ededed;
    -moz-border-radius:6px;
    -webkit-border-radius:6px;
    border-radius:6px;
    border:1px solid #dcdcdc;
    display:inline-block;
    color:#777777;
    font-family:Arial;
    font-size:12px;
    font-weight:bold;
    padding:4px 19px;
    text-decoration:none;
    text-shadow:1px 1px 0px #ffffff;
  }.follow-button:hover {
    background-color:#dfdfdf;
  }.follow-button:active {
    position:relative;
    top:1px;
  }
