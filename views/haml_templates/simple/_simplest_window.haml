%html( lang='en' )
  %head
    %meta( charset='utf-8' )
    %title=_ 'title', 'untitled'
    
    -# load some CSS 
    - _('css', []).each do |css_file_path|
      %link( rel='stylesheet' href="#{HooUtil.cssHelper(css_file_path)}" type="text/css" )

    - _('scss', []).each do |scss_file_path|
      %link( rel='stylesheet' href="#{HooUtil.scssHelper(scss_file_path)}" type="text/css" )

    -# load some script
    - _('javascript', []).each do |js_file_path|
      %script( src="#{HooUtil.javascriptHelper(js_file_path)}" type="text/javascript" )

    - _('coffeescript', []).each do |coffee_file_path|
      %script( src="#{HooUtil.coffeescriptHelper(coffee_file_path)}" type="text/javascript" )
      

  %body    
    - @subrenderers.each_with_index do |subrenderer, i|
      = insert i

